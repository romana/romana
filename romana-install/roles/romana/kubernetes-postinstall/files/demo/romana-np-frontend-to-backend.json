{
   "metadata": {
     "name" : "pol1"
   },
   "apiVersion" : "romana.io/demo/v1",
   "kind" : "NetworkPolicy",
   "spec" : { 
               "podSelector" : { 
                    "segment" : "backend" 
                },
                "allowIncoming" : {
                    "toPorts" : [
			{
		          "port": 80,
			  "protocol": "TCP"
			}
                    ],
                    "from" : [
			{
			   "pods" : {
				"segment" : "frontend"
	                   }
			}
                    ]
                }
           }
}
